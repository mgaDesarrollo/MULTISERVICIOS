// Prisma schema for MULTISERVICIOS
// Set your DATABASE_URL in .env (e.g., postgresql://user:pass@host:5432/dbname)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  createdAt DateTime @default(now())
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
}

model Product {
  id             Int       @id @default(autoincrement())
  name           String
  description    String?
  technicalInfo  String?
  image          String?
  images         String[]  @default([])
  price          Decimal   @db.Decimal(10,2)
  brand          String?
  rating         Float?    @default(4.5)
  features       Json?
  specifications Json?
  category       Category  @relation(fields: [categoryId], references: [id])
  categoryId     Int
  createdAt      DateTime  @default(now())
  saleItems      SaleItem[]
}

model Client {
  id        Int      @id @default(autoincrement())
  name      String
  dni       String?  @unique
  cuit      String?  @unique
  email     String?
  phone     String?
  notes     String?
  createdAt DateTime @default(now())
  sales     Sale[]
}

model FinancingMethod {
  id           Int       @id @default(autoincrement())
  name         String
  description  String?
  interestRate Float     @default(0) // 0.2 = 20%
  installments Int       @default(1)
  createdAt    DateTime  @default(now())
  sales        Sale[]
}

enum SaleStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELLED
}

enum InstallmentStatus {
  PENDING
  PARTIAL
  PAID
  OVERDUE
}

enum PaymentMethod {
  CASH
  TRANSFER
  CARD
  MP
  STRIPE
  OTHER
}

model Sale {
  id                  Int               @id @default(autoincrement())
  client              Client            @relation(fields: [clientId], references: [id])
  clientId            Int
  financingMethod     FinancingMethod   @relation(fields: [financingMethodId], references: [id])
  financingMethodId   Int
  subtotal            Decimal           @db.Decimal(12,2)
  downPayment         Decimal           @default(0) @db.Decimal(12,2)
  financedAmount      Decimal           @default(0) @db.Decimal(12,2)
  interest            Decimal           @db.Decimal(12,2)
  total               Decimal           @db.Decimal(12,2)
  installmentCount    Int               @default(1)
  appliedRate         Float             @default(0)
  startDate           DateTime          @default(now())
  status              SaleStatus        @default(ACTIVE)
  createdAt           DateTime          @default(now())
  items               SaleItem[]
  installments        Installment[]
  payments            Payment[]
}

model SaleItem {
  id         Int      @id @default(autoincrement())
  sale       Sale     @relation(fields: [saleId], references: [id])
  saleId     Int
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int
  quantity   Int      @default(1)
  unitPrice  Decimal  @db.Decimal(10,2)
}

model Installment {
  id           Int                @id @default(autoincrement())
  sale         Sale               @relation(fields: [saleId], references: [id])
  saleId       Int
  number       Int
  dueDate      DateTime
  principalDue Decimal            @db.Decimal(12,2)
  interestDue  Decimal            @db.Decimal(12,2)
  feeDue       Decimal            @default(0) @db.Decimal(12,2)
  totalDue     Decimal            @db.Decimal(12,2)
  amountPaid   Decimal            @default(0) @db.Decimal(12,2)
  paidAt       DateTime?
  status       InstallmentStatus  @default(PENDING)
  payments     Payment[]

  @@unique([saleId, number])
  @@index([dueDate])
}

model Payment {
  id              Int             @id @default(autoincrement())
  sale            Sale            @relation(fields: [saleId], references: [id])
  saleId          Int
  installment     Installment?    @relation(fields: [installmentId], references: [id])
  installmentId   Int?
  date            DateTime        @default(now())
  amount          Decimal         @db.Decimal(12,2)
  method          PaymentMethod   @default(CASH)
  reference       String?
  notes           String?
  appliedPrincipal Decimal        @default(0) @db.Decimal(12,2)
  appliedInterest  Decimal        @default(0) @db.Decimal(12,2)
  appliedFees      Decimal        @default(0) @db.Decimal(12,2)
}
